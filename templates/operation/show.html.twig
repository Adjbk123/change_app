{% extends 'base.html.twig' %}

{% block title %}Operation{% endblock %}

{% block body %}
    <h1>Operation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ operation.id }}</td>
            </tr>
            <tr>
                <th>TypeOperation</th>
                <td>{{ operation.typeOperation }}</td>
            </tr>
            <tr>
                <th>MontantSource</th>
                <td>{{ operation.montantSource }}</td>
            </tr>
            <tr>
                <th>MontantCible</th>
                <td>{{ operation.montantCible }}</td>
            </tr>
            <tr>
                <th>Taux</th>
                <td>{{ operation.taux }}</td>
            </tr>
            <tr>
                <th>Sens</th>
                <td>{{ operation.sens }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ operation.createdAt ? operation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ operation.updatedAt ? operation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_operation_index') }}">back to list</a>

    <a href="{{ path('app_operation_edit', {'id': operation.id}) }}">edit</a>

    {{ include('operation/_delete_form.html.twig') }}
{% endblock %}
