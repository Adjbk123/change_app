{% extends 'base.html.twig' %}

{% block title %}Nouvelle Opération d'Achat{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h3>Créer une nouvelle opération d'Achat</h3>
            </div>
            <div class="card-body">
                <form method="post" action="">
                    {# Sécurité : Ne jamais oublier le jeton CSRF #}
                    <input type="hidden" name="_token" value="{{ csrf_token('new_operation_token') }}">


                    <div id="dynamic-fields-container">

                        {% include 'operation/_form_client.html.twig' %}

                        <hr>
                        {% include 'operation/_form_achat_fields.html.twig' %}


                    </div>

                    <button type="submit" class="btn btn-primary mt-3 w-100">Enregistrer l'opération</button>
                </form>
            </div>
        </div>
    </div>

    {% include 'operation/_client_modal.html.twig' %}

{% endblock %}


{% block javascripts %}
    {{ parent() }}



    {% include 'operation/_client_modal_script.html.twig' %}

    {% include 'operation/_client_modal_script.html.twig' %}



    <style>
        /* Styles pour rendre le formulaire multi-étapes plus clair */
        .progress-container{display:flex;justify-content:center;align-items:center;margin-bottom:2rem;position:relative}.progress-step{background-color:#e0e0e0;color:#6c757d;border-radius:20px;padding:8px 15px;font-weight:700;transition:background-color .3s ease,color .3s ease;z-index:1;white-space:nowrap}.progress-step.active{background-color:#0d6efd;color:#fff}.progress-line{flex-grow:1;height:4px;background-color:#e0e0e0;position:absolute;width:calc(100% - 300px);z-index:0}.is-invalid{border-color:#dc3545}.is-invalid:focus{box-shadow:0 0 0 .25rem rgba(220,53,69,.25)}
    </style>
{% endblock %}
