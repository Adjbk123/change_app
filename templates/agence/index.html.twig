{% extends 'base.html.twig' %}

{% block title %}Liste des Agences{% endblock %}
{% block button %}
    <a href="{{ path('app_agence_new') }}" class="btn btn-outline-primary">Nouvel ajout</a>
{% endblock %}

{% block body %}
    <table class="table  datatable-init table-hover">
        <thead class="table-secondary">
        <tr>
            <th>N°</th>
            <th>Nom</th>
            <th>Ville</th>
            <th>Adresse</th>
            <th>Téléphone</th>
            <th>Téléphone 2</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for agence in agences %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ agence.nom }}</td>
                <td>{{ agence.pays.nom }} |  {{ agence.ville }}</td>
                <td>{{ agence.adresse }}</td>
                <td>{{ agence.telephone }}</td>
                <td>{{ agence.telephone2 }}</td>
                <td>
                    <a href="{{ path('app_agence_show', {'id': agence.id}) }}" class="btn btn-outline-primary btn-sm">Gérer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
