{% extends 'base.html.twig' %}

{% block title %}AffectationAgence index{% endblock %}

{% block body %}
    <h1>AffectationAgence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>RoleInterne</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Actif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for affectation_agence in affectation_agences %}
            <tr>
                <td>{{ affectation_agence.id }}</td>
                <td>{{ affectation_agence.roleInterne }}</td>
                <td>{{ affectation_agence.dateDebut ? affectation_agence.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ affectation_agence.dateFin ? affectation_agence.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ affectation_agence.actif ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_affectation_agence_show', {'id': affectation_agence.id}) }}">show</a>
                    <a href="{{ path('app_affectation_agence_edit', {'id': affectation_agence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_affectation_agence_new') }}">Create new</a>
{% endblock %}
